import cv2



img = cv2.imread("cores.png",cv2.IMREAD_COLOR)


r,g,b = cv2.split(img)

# red2 = cv2.inRange(img,(0,0,0),(0,0,255))
# green2 = cv2.inRange(img,(0,0,0),(0,255,0))
# blue2 = cv2.inRange(img,(0,0,0),(255,0,0))

cv2.imshow('src',img)
cv2.imshow('red',r)
cv2.imshow('green',g)
cv2.imshow('blue',b)
# cv2.imshow('red2',red2)
# cv2.imshow('green2',green2)
# cv2.imshow('blue2',blue2)
cv2.waitKey(0)